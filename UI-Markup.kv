<dotDesktopUI>:

	id: dotdesktopid
	display: entry
	rows: 10
	padding: 0
	spacing: 0


	BoxLayout:

		spacing: 0
		padding: 0

		Label:
			text: 'Мастер создания .Desktop'
			font_size: 72
			font_name: 'fonts/Ubuntu-R.ttf'
			cursor_color: [0, 0, 0]
			selection_color: [255, 255, 255, .2]

	BoxLayout:

		spacing: 0
		padding: 0

		TextInput:
			id: entry
			background_color: [0.205, 0.205, 0.205] # Черный
			foreground_color: [255, 255, 255] # Белый
			multiline: False
			font_size: 48
			font_name: 'fonts/Ubuntu-R.ttf'
			color: '#1C1C1C'
			cursor_color: [255, 255, 255, .2]
			selection_color: [255, 255, 255, .2]
			halign: 'left'

	BoxLayout:

		spacing: 10
		padding: 10

		Label:
			text: "text"
			font_size: 32
			font_name: 'fonts/Ubuntu-Th.ttf'
			halign: 'right'
			valign: 'middle'

		TextInput:
			id: entry1
			background_color: [0.205, 0.205, 0.205] # Черный
			foreground_color: [255, 255, 255] # Белый
			multiline: False
			font_size: 48
			font_name: 'fonts/Ubuntu-R.ttf'
			color: '#1C1C1C'
			cursor_color: [255, 255, 255, .2]
			selection_color: [255, 255, 255, .2]
			halign: 'left'

	BoxLayout:

		spacing: 0
		padding: 0

		Button:
			text: "Создать"
			background_color: (0, 1, 0, 1)
			on_press: root.WriteConfig.WriteCFG()

			size_hint: .3, .3
			pos: 500, 500
